/* ==================== Begin style.css =======================*/

$normalBackground: lightgray;
$hoverBackground: darkgrey;
$textColor: #000;

* {
  box-sizing: border-box;
}

/* Thanks to Una Kravets for her post on CSS Tricks
 * Solved With CSS! Dropdown Menus
 * https://css-tricks.com/solved-with-css-dropdown-menus/
 */

a {
  text-decoration: none;
}


nav {
	font-family: monospace;
}

.goto-menu {
  background: $normalBackground;
	list-style: none;
	margin: 0;
	padding-left: 0;
}

.goto-menu {
  li {
  	color: $textColor;
    background: $normalBackground;
  	display: block;
  	float: left;
  	padding: 1rem;
  	position: relative;
  	text-decoration: none;
  }
  
  li a {
   color: $textColor;
  }

  li:hover {
  	background: $hoverBackground;
  	cursor: pointer;
  }

  .goto-submenu {
  	background: $normalBackground;
  	visibility: hidden;
    opacity: 0;
    min-width: 5rem;
  	position: absolute;
    margin-top: 1rem;
  	left: 0;
    display: none;
  }

  li:hover > .goto-submenu,
  li .goto-submenu:hover {
   visibility: visible;
   opacity: 1;
   display: block;
  }

  .goto-submenu {
  	clear: both;
    width: 100%;
  }
}
/* ==================== End style.css =======================*/

